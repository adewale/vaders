{
  "name": "vaders",
  "version": "1.0.0",
  "description": "Multiplayer TUI Space Invaders clone (1-4 players) using OpenTUI and Cloudflare Durable Objects",
  "type": "module",
  "bin": {
    "vaders": "./bin/vaders.ts"
  },
  "workspaces": [
    "client",
    "worker",
    "shared"
  ],
  "scripts": {
    "vaders": "bun run bin/vaders.ts",
    "dev": "bun run bin/vaders.ts",
    "dev:client": "cd client && bun run dev",
    "dev:worker": "cd worker && bun run dev",
    "build": "cd client && bun run build",
    "deploy": "cd worker && bun run deploy",
    "typecheck": "cd worker && bun run typecheck && cd ../client && bun run typecheck",
    "test": "bun run test:client && bun run test:worker && bun run test:shared",
    "test:client": "cd client && bun test",
    "test:worker": "cd worker && bun run test",
    "test:shared": "cd shared && bun test",
    "install:all": "cd worker && bun install && cd ../client && bun install",
    "lint": "bunx @biomejs/biome lint .",
    "lint:check": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome check --write ."
  },
  "keywords": [
    "space-invaders",
    "multiplayer",
    "tui",
    "terminal",
    "game",
    "cloudflare",
    "durable-objects",
    "opentui"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14"
  }
}
